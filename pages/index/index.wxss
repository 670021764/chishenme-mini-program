.wrapper {
  display: flex;
  width: 100%;
  height: 100vh;
  flex-direction: column;
  align-items: center;
  justify-content: center; 
}
.wrapper view {
  margin-top: 30rpx;
}
.wrapper view:first-child {
  margin-top: 0
}
.random {
  margin-top: 30rpx;
  font-size: 1.8em;
  color: #ff9800;
}
.wrapper .btn {
  width: 280rpx;
  border-radius: 2px;
  color: #474747;
  background-color: #fff;
  border-color: transparent;
  box-shadow: 0rpx 0rpx 5rpx 2rpx rgba(0, 0, 0, .1)
}
.wrapper .btn::after {
  border: none;
}